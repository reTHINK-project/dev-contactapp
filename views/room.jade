extends ../node_modules/jade-bootstrap/_bootstrap
append styles
	// Bootstrap theme
	+bootswatch("cerulean")
	// Custom styles for this template
	link(href='../css/theme.css', rel='stylesheet')
	// Custom styles for this template
	link(href='../css/navbar-fixed-top.css', rel='stylesheet')
	link(href='../css/style.css', rel='stylesheet')
	script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
append scripts
	script(src='../javascripts/room.js')
	script(src='https://cdn.socket.io/socket.io-1.4.5.js')
	script var room!= room
append body
	// Fixed navbar
	nav.navbar.navbar-default.navbar-fixed-top
		.container
			.navbar-header
				button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
					span.sr-only Toggle navigation
					span.icon-bar
					span.icon-bar
					span.icon-bar
				a.navbar-brand(href='/')!= title
			#navbar.navbar-collapse.collapse
				ul.nav.navbar-nav
					li
						a(href='/home') Home
					li
						a(href='/home/profile') Profile
					li
						a(href='/home/admin') Admin
					li.active
						a(href='#') Room
					li#loginlogout
						a(href='/') Logout
	.container
		h2 Realtime communication with WebRTC
		.row 
			.col-sm-6
				video(id="localVideo" autoplay muted)
			.col-sm-6
				video(id="remoteVideo" autoplay)
	.container
		.row
			.col-sm-4 
				form(onSubmit="return raiseDistantACR()")
					.form-group
						label(for="peer_acr") Peer ACR :
						input.form-control(id='peer_acr' type='number' min="-1" max="4" step="1" value ="-1")       
					.form-group
						label(for="peer_or") Peer Id Origin :
						input.form-control(id='peer_or' type='text', value ="192.168.99.100:8080")
					button(type="submit" class="btn btn-warning" name="Submit") Request       