extends base.jade
append body
    div.container
        div.col-sm-6.col-sm-offset-3
            h1 Signup
            form(action="/signup" method="POST")
                div.form-group
                    label Email
                    input.form-control(type='email', name="email", placeholder='Email address', required='true', autofocus='')
                div.form-group
                    label Password
                    input.form-control(type='password',name="password", placeholder='Password', required='true', autofocus='')
                button(type="submit" class="btn btn-warning") Signup
            hr 
            p Already have an account ? 
                a.register(href="/") Login 
