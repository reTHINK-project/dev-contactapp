extends ../node_modules/jade-bootstrap/_bootstrap
append styles
    // Bootstrap theme
    +bootswatch("cerulean")
    // Custom styles for this template
    link(href='../css/theme.css', rel='stylesheet')
    // Custom styles for this template
    link(href='../css/navbar-fixed-top.css', rel='stylesheet')
    link(href='../css/style.css', rel='stylesheet')
append body
    div.container
        div.col-sm-6.col-sm-offset-3
            h1 Signup
            form(action="/signup" method="POST")
                div.form-group
                    label Email
                    input.form-control(type='email', name="email", placeholder='Email address', required='true', autofocus='')
                div.form-group
                    label Password
                    input.form-control(type='password',name="password", placeholder='Password', required='true', autofocus='')
                button(type="submit" class="btn btn-warning") Signup
            hr 
            p Already have an account ? 
                a.register(href="/") Login 
